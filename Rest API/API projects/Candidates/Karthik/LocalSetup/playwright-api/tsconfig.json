{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "types": [
            "node",
            "@playwright/test"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": [
        "src",
        "tests",
        "test-data"
    ]
}